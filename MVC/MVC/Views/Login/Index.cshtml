@model MVC.Models.UserLogin

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    @*<link href="~/Content/Login.css" rel="stylesheet" />*@
    <script src="https://use.typekit.net/ayg4pcz.js"></script>
    <script>try { Typekit.load({ async: true }); } catch (e) { }</script>
    <title>Index</title>
</head>
<body>
    <div class="container">
        <h1 class="welcome text-center">Welcome to <br> MVC Project</h1>
        <div class="card card-container">
            <h2 class='login_title text-center'>User Login</h2>
            <hr>
            @using (Html.BeginForm("LoginUser", "Login"))
            {
                <div class="card card-container">
                    <div class="row">
                        <div class="col-lg-offset-4 col-lg-4">
                            @Html.LabelFor(m => m.UserID)
                            <div>
                                @Html.TextBoxFor(m => m.UserID, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-offset-4 col-lg-4">
                            @Html.LabelFor(m => m.Password)
                            <div>
                                @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top:10px;">
                        <div class="col-lg-offset-4 col-lg-1">
                            <input type="submit" name="name" value="Login" class="btn btn-primary" />
                        </div>
                        <div class="col-lg-2">
                            <input type="submit" name="name" value="Register" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
